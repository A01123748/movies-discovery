{
    "env": {
        "browser": true,
        "es2021": true,
        "jest" : true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react", "prettier"
    ],
    "rules": {
        "react/jsx-uses-vars": 1,
        "react/react-in-jsx-scope": 1,
        "semi": ["error", "always"],
        "quotes": ["error", "double"],
        "eqeqeq": "off",
        "curly": "error",
        "react/prop-types": "off"
    },
    "settings":{
        "react": {
            "version": "detect"
        }
    }
}
